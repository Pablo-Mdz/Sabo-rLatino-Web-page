




<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row-m-5 d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img
                                        src="https://res.cloudinary.com/saborlatino/image/upload/v1669313560/saborlatino_gvd9oz.png"
                                        style="width: 185px;"
                                        alt="logo"
                                     
                                    />
                                    <h4 class="mt-1 mb-5 pb-1">We are Sabor
                                        Latino</h4>
                                </div>

                                <form action="/auth/login" method="POST">
                                    <p>Please login to your account</p>

                                    <div class="form-outline mb-4">
                                        <input
                                            type="text"
                                            name="username"
                                            id="username"
                                            class="form-control"
                                            placeholder="User Name"
                                        />
                                        <label
                                            class="form-label"
                                            for="form2Example11"
                                        ></label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input
                                            type="password"
                                            name="password"
                                            id="password"
                                            class="form-control"
                                            placeholder="password"
                                        />
                                        <label
                                            class="form-label"
                                            for="form2Example22"
                                        ></label>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button
                                            class="btn btn-success btn-block fa-lg gradient-custom-2 p-2 mb-3"
                                            value="Login"
                                            type="submit"
                                            id="submit"
                                        >Log in</button>

                                    </div>
                                </form>
                            </div>
                        </div>                   
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-black px-3 py-4 p-md-0 mx-md-4">
                                    <h2 class="mb-4 p-3">enter your profile</h2>
                                    <img     class=" logo-login rounded-3 " src="https://res.cloudinary.com/saborlatino/image/upload/v1669313609/chef_uoj1rv.jpg" alt="img chef">
                                    <p class="small mb-4">From here you can enter your profile and add new restaurants, edit and/or delete them.</p>
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{{#if message}}
    <h3 class="error">{{message}}</h3>
{{/if}}

