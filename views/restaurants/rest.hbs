<div class="container">
    <div class="row mr-3">
        {{! <div class="row "> }}
        {{#each restaurant}}
            <div class="col-sm-12 col-md-4 card">
                <ul>
                    <div class="card profile-card-5">
                        <div class="card-img-block">
                            <img
                                class="card-img-top"
                                src="{{imgPath}}"
                                alt="Img, Restaurant"
                            />
                        </div>
                        <div class="card-body pt-0">
                            <h5 class="card-title"> {{name}}</h5>
                            <p class="card-text">
                                {{this.description}}</p>
                            <p class="mt-3 w-100 float-left text-center"><strong
                                > {{url}}</strong></p>
                        </div>

                    </div>
                    <a href="{{_id}}" class="card-link">More about</a>
                    {{!-- <form action="/restaurants/{{_id}}/delete" method="POST">
                        <button type="submit">Delete Restaurant</button>
                    </form> --}}
                </ul>
            </div>
        {{/each}}
        {{! </div> }}
    </div>

</div>